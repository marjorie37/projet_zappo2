extends ../layout

block content
        .col
            .row.justify-content-between.mb-4
                h1.bleuZappoCl
                    i.mr-3.far.fa-user
                    span.text-center Cr√©er un compte
            .row.justify-content-center.mt-5
                .col-md-8.bg-light.boxShadowB
                    form.needs-validation(method="POST", action=`/admin/manage/creer` novalidate)
